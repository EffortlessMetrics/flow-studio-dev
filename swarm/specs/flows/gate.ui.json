{
  "$schema": "../schemas/flow_ui_overlay.schema.json",
  "flow_id": "gate",
  "version": "1.0.0",
  "nodes": {
    "receipt": {
      "position": { "x": 100, "y": 200 },
      "color": "node_highlight",
      "collapsed": false,
      "pinned": true
    },
    "contract": {
      "position": { "x": 300, "y": 200 },
      "color": "node_highlight",
      "collapsed": false,
      "pinned": true
    },
    "security": {
      "position": { "x": 500, "y": 200 },
      "color": "node_highlight",
      "collapsed": false,
      "pinned": true
    },
    "coverage": {
      "position": { "x": 700, "y": 200 },
      "color": "node_highlight",
      "collapsed": false,
      "pinned": true
    },
    "gate_fix": {
      "position": { "x": 900, "y": 200 },
      "color": "node_highlight",
      "collapsed": false,
      "pinned": true
    },
    "merge_decision": {
      "position": { "x": 1100, "y": 200 },
      "color": "node_highlight",
      "collapsed": false,
      "pinned": true
    }
  },
  "edges": {},
  "palette": {
    "node_default": "#4a5568",
    "node_highlight": "#d69e2e",
    "node_active": "#ecc94b",
    "node_completed": "#2d3748",
    "node_error": "#e53e3e",
    "edge_default": "#718096",
    "edge_loop": "#ed8936",
    "edge_branch": "#4299e1",
    "background": "#1a202c",
    "grid": "#2d3748"
  },
  "canvas": {
    "zoom": 1,
    "pan": { "x": 0, "y": 0 },
    "grid_size": 20,
    "grid_visible": true,
    "snap_to_grid": true
  },
  "groups": [
    {
      "id": "audits",
      "label": "Audit Checks",
      "node_ids": ["receipt", "contract", "security", "coverage"],
      "color": "#d69e2e80",
      "collapsed": false
    }
  ],
  "annotations": [
    {
      "id": "mechanical_note",
      "text": "Gate fixes are MECHANICAL only - no logic changes",
      "position": { "x": 900, "y": 100 },
      "style": {
        "font_size": 12,
        "color": "#a0aec0"
      }
    },
    {
      "id": "decision_note",
      "text": "MERGE / BOUNCE / ESCALATE",
      "position": { "x": 1100, "y": 280 },
      "style": {
        "font_size": 14,
        "color": "#ecc94b"
      }
    }
  ]
}
